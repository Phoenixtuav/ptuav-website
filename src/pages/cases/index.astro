---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from 'astro:content';

// 1. 获取所有案例数据
const allCases = await getCollection('cases');

// 2. 按日期降序排序 (最新在最前)
const sortedCases = allCases.sort((a, b) => {
  const dateA = new Date(a.data.date || 0).getTime();
  const dateB = new Date(b.data.date || 0).getTime();
  return dateB - dateA;
});

// 日期格式化辅助函数
const formatDate = (date: Date | string) => {
  return new Date(date).toLocaleDateString('zh-CN', {
    year: 'numeric',
    month: 'long', 
    day: 'numeric'
  });
};
---

<Layout title="合作案例 - Astro Tech">
  <main class="bg-black min-h-screen pt-24 pb-20">
    
    <div class="max-w-5xl mx-auto px-4">
      <div class="mb-16">
        <h1 class="text-4xl md:text-5xl font-bold text-white mb-6 border-l-4 border-blue-600 pl-6">
          成功案例
        </h1>
        <p class="text-neutral-400 text-lg pl-7 max-w-2xl">
          探索我们如何通过前沿技术赋能各行各业，从数字化转型到智能架构的落地实践。
        </p>
      </div>

      <div class="space-y-8">
        {sortedCases.map((item) => (
          <a 
            href={`/cases/${item.id}`}
            class="group block relative bg-neutral-900/40 border border-neutral-800 rounded-2xl overflow-hidden hover:border-blue-500/30 hover:bg-neutral-900/60 transition-all duration-300"
          >
            <div class="flex flex-col md:flex-row">
              {/* 左侧：图片区域 (固定宽度 + 响应式) */}
              <div class="w-full md:w-80 h-56 md:h-auto md:min-h-[220px] relative overflow-hidden shrink-0">
                <img 
                  src={item.data.image} 
                  alt={item.data.title}
                  class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
                />
                {/* 图片上的光泽遮罩 */}
                <div class="absolute inset-0 bg-gradient-to-t from-neutral-900 via-transparent to-transparent md:bg-gradient-to-r md:from-transparent md:to-neutral-900/50 opacity-60" />
              </div>

              {/* 右侧：内容区域 */}
              <div class="p-6 md:p-8 flex flex-col justify-center flex-1">
                {/* 顶部元数据：分类 + 日期 */}
                <div class="flex items-center justify-between mb-3 text-xs md:text-sm">
                  <span class="px-3 py-1 bg-blue-500/10 text-blue-400 border border-blue-500/20 rounded-full font-medium tracking-wide">
                    {item.data.category}
                  </span>
                  <time class="text-neutral-500 font-mono">
                    {formatDate(item.data.date)}
                  </time>
                </div>

                {/* 标题 */}
                <h2 class="text-2xl font-bold text-white mb-3 group-hover:text-blue-400 transition-colors">
                  {item.data.title}
                </h2>

                {/* 简介 */}
                <p class="text-neutral-400 line-clamp-2 md:line-clamp-3 leading-relaxed mb-6">
                  {item.data.description}
                </p>

                {/* 底部：阅读更多箭头 */}
                <div class="flex items-center text-sm font-semibold text-white mt-auto">
                  阅读完整案例
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-2 transition-transform group-hover:translate-x-1 text-blue-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                  </svg>
                </div>
              </div>
            </div>
          </a>
        ))}
      </div>

      {/* 底部空状态处理（可选） */}
      {sortedCases.length === 0 && (
        <div class="text-center py-20 text-neutral-500">
          暂无相关案例发布。
        </div>
      )}
    </div>
  </main>
</Layout>